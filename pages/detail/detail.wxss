/* pages/detail/detail.wxss */
.detail {
  height: 100%;
  background: #f5f5f5;
  padding-bottom: 140rpx;
  box-sizing: border-box;
}

.header {
  height: 48px;
  line-height: 48px;
  padding: 0 20px;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}


.header text {
  text-align: center;
  width: 100%;
  font-size: 16px;
}

.content image {
  height: 540rpx;
  width: 100%;
}

.intro {
  padding: 12px 10px;
  box-sizing: border-box;
  border-radius: 20px;
  width: 96%;
  background: #ffffff;
  margin: -10px auto;
  z-index: 9999;
}

.name {
  height: 60px;
  display: flex;
  justify-content: space-between;
}

.select {
  margin-bottom: 10px;
  border-bottom: 1px solid #f5f5f5;
}

.count {
  height: 120rpx;
  border-bottom: 1px solid #f5f5f5;
}

.count, .count .icon {
  font-size: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count text {
  margin: 0 20px;
}


.count-icon{
  border-radius: 50%;
  border: 1px solid red;
  width: 25px;
  height: 25px;
  text-align: center;
  line-height: 25px;
}

.count-icon-add {
  background: #ee0a24;
}

.desc {
  padding-top: 23px;
  margin-bottom: 70px;
  font-size: 16px;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #444;
  font-size: 14px;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 10px;
}

.iconCart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.iconBag {
  position: relative;
  margin-right: 20px;
}

.num {
  position: absolute;
  top: -5px;
  right: 15px;
  width: 16px;
  height: 16px;
  color: #fff;
  background-color: #ee0a24;
  border-radius: 50%;
  text-align: center;
  line-height: 16px;
}

.addCart {
  flex: 7;
}