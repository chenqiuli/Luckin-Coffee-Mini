/* pages/home/home.wxss */
.home {
  width: 100vw;
  height: 100vh;
}

/* header */
.headerView {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}

.headerView .text {
  flex: 1.5;
}

.search {
  flex: 7;
  height: 60rpx;
  padding: unset !important;
}


/* swiper */
.swiperView {
  margin-top: 10px;
  padding: 10px;
}

swiper {
  height: 400rpx;
  width: 100%;
}

.image {
  height: 100% !important;
  width: 100%;
}

/* 热卖 */
.hotView .text {
  background-color: #0c34ba;
  margin: 10px 10px 10px 0;
  font-size: 16px;
  color: #fff;
  height: 38px;
  line-height: 38px;
  text-align: center;
  width: 100px !important;
  border-top-right-radius: 8px;
}

.hotView .list {
  display: flex;
  flex-wrap: wrap;
}

.hotView .list>view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
}

.hotView .list image {
  width: 300rpx;
  height: 200rpx;
}

.hotView .list .name {
  color: #444;
  font-size: 16px;
  margin-top: 4px;
}

.hotView .list .price {
  color: red;
}

.hotView .list .desc {
  width: 310rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999;
} 