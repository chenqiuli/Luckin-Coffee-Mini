/* pages/login/login.wxss */
.main {
  display: flex;
  flex-direction: column;
  padding: 15px;
  box-sizing: border-box;
}

.top {
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  line-height: 120rpx;
  flex: 2;
}

.top_left {
  display: flex;
}

.top_left image {
  width: 100rpx;
  margin-right: 15px;
}

.top_left text {
  font-size: 16px;
}

.top_right {
  color: #0c34ba;
  font-size: 16px;
}


.center {
  margin-top: 40px;
  flex-shrink: 1;
}

.welcome {
  font-size: 24px;
}

.tip {
  font-size: 16px;
  color: #999;
  margin: 15px 0;
}

.forgetPwd {
  color: #000000;
}