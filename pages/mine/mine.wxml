<view class="mine_root">
  <view class="userBg">
    <image src="{{base64 || info.userBg}}" mode="widthFix" bindtap="handleChooseBg" />
  </view>
  <view class="contain">
    <view class="header">
      <view class="userImg">
        <image src="{{info.userImg}}" mode="widthFix" />
      </view>
      <view class="nickName" bindtap="test">
        <view class="name">
          {{info.nickName}}
        </view>
        <view class="desc">·
          {{info.desc || "暂无描述"}}
        </view>
      </view>
    </view>

    <view class="info">
      <!-- bind:click="" -->
      <van-cell title="个人资料" is-link bindtap="handleInfo"/>
      <van-cell title="我的订单" is-link />
      <van-cell title="我的收藏" is-link />
      <van-cell title="地址管理" is-link />
      <van-cell title="安全中心" is-link />
    </view>
  </view>
</view>