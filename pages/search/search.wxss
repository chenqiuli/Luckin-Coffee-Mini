/* pages/search/search.wxss */


.list {
  display: flex;
  flex-wrap: wrap;
}

.list>view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
}

.list image {
  width: 300rpx;
  height: 200rpx;
}

.list .name {
  color: #444;
  font-size: 16px;
  margin-top: 4px;
}

.list .price {
  color: red;
}

.list .desc {
  width: 310rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999;
} 