/* pages/settlement/settlement.wxss */
.settlement {
  background: #f5f5f5;
  height: 100%;
}

.chooseArea {
  height: 214rpx;
  background-color: #fff;
  border-radius: 10px;
  margin: 10px;
}

.settleContainer,
.chooseArea {
  padding: 10px;
  box-sizing: border-box;
}

.chooseArea .top {
  margin: 8px 0 10px 0;
}

.modal {
  height: 600rpx;
  overflow-y: auto;
  padding: 20px 10px;
}

.cell {
  padding-top: 10px;
  box-sizing: border-box;
}

.tag {
  width: 32px;
  height: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.orderInfo {
  padding: 20px 0px;
  background-color: #fff;
  border-radius: 10px;
}

.orderInfo .title {
  font-weight: bold;
  margin-bottom: 20px;
  padding: 0 10px;
}

.totalInfo {
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  border-top: 1px dotted #ececec;
  height: 50px;
  line-height: 50px;
}

.totalInfo view:first-child {
  color: #666;
}

.totalInfo view:last-child {
  color: #e4393c;
  font-weight: bold;
}

.button {
  margin-top: 22px;
}