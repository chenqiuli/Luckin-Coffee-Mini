<wxs src="./settlement.wxs" module="tools"></wxs>

<view class="settlement">
  <van-nav-bar custom-class="nav" title="订单结算" left-text="返回" left-arrow bind:click-left="onClickLeft" />

  <view class="chooseArea">
    <view class="top">
      选择地址
      <van-icon name="arrow" bind:click="handleClick" />
    </view>
    <van-cell center custom-class="default_cell" label="{{defaultArea.province}}{{defaultArea.city}}{{defaultArea.county}}{{defaultArea.addressDetail}}">
      <view slot="title">
        <view class="van-cell-text-top">
          <text>{{defaultArea.name}}  </text>
          <text>{{defaultArea.tel}}  </text>
          <van-tag round type="primary" custom-class="tag" color="#0c34ba" wx:if="{{defaultArea.isDefault}}">默认</van-tag>
        </view>
      </view>
    </van-cell>
  </view>

  <view class="settleContainer">
    <view class="orderInfo">
      <view class="title">
        订单信息
      </view>
      <CartItem cartList="{{orderList}}" isShowCheckbox="{{false}}" />
      <view class="totalInfo">
        <view>
          共计 {{tools.num(orderList)}} 件商品
        </view>
        <view>
          订单金额：￥{{tools.total(orderList)}}
        </view>
      </view>
    </view>
    <view class="button">

      <van-button color="#0c34ba" round type="default" custom-style="width: 100%; height: 45px" bind:click="handleSettle">立即结算</van-button>
    </view>
  </view>

  <van-popup closeable position="bottom" show="{{ show }}" custom-class="modal" bind:close="onClose">
    <view>
      选择地址
    </view>
    <view wx:for="{{areaList}}" wx:key="item.id" class="cell">
      <van-cell center label="{{item.province}}{{item.city}}{{item.county}}{{item.addressDetail}}">
        <van-checkbox slot="icon" value="{{ checkedIndex === item.id }}" data-id="{{item.id}}" bind:change="onChange"></van-checkbox>
        <view slot="title">
          <view class="van-cell-text">
            <text>{{item.name}} </text>
            <text>{{item.tel}} </text>
            <van-tag round type="primary" custom-class="tag" color="#0c34ba" wx:if="{{item.isDefault}}">默认</van-tag>
          </view>
        </view>
      </van-cell>
    </view>
  </van-popup>
</view>