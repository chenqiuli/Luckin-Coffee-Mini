/* components/CartItem/CartItem.wxss */
.cartItem {
  margin-bottom: 10px;
  background: #fff;
  border-radius: 10px;
}

.cell__right {
  background-color: #e4393c;
  height: 100%;
  box-sizing: border-box;
  width: 60px;
  color: #fff;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cell__content {
  display: flex;
  align-items: center;
  padding: 10px;
  box-sizing: border-box;

}

.cell__content image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 10px;
}

.cell__content .enname {
  font-size: 12px;
  color: #acacac;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin: 5px 0;
}

.cell__content .icon {
  font-size: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cell_right {
  width: calc(100% - 200rpx);
}

.price_area {
  display: flex;
  justify-content: space-between;
}

.count-icon{
  border-radius: 50%;
  border: 1px solid #f78491;
  width: 20px;
  height: 20px;
  text-align: center;
  line-height: 20px;
}

.count-icon-add {
  border: unset;
  background: #ee0a24;
}

.icon text {
  width: 36px;
  text-align: center;
}