.list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.list>.list_item {
  width: 48.5%;
  display: flex;
  flex-direction: column;
  margin-bottom: 8px;
  margin-right: 8px;
  position: relative;
}

.list>.list_item:nth-child(2n) {
  margin: unset !important;
}

.list_item .image {
  width: 100%;
  height: 340rpx;
}

.name {
  color: #444;
  font-size: 16px;
  margin-top: 4px;
}

.price {
  display: flex;
  justify-content: space-between;
}

.price>view:first-child {
  color: #e4393c;
  font-size: 12px;
  margin-top: 6px;
  font-weight: bold;
}

.desc {
  width: 310rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999;
  font-size: 12px;
}

.tag {
  background-color: #e4393c;
  color: #fff;
  padding: 6px;
  border-top-right-radius: 30%;
  border-bottom-right-radius: 30%;
  width: 34px;
  height: 16px;
  text-align: center;
  line-height: 16px;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 12px;
}